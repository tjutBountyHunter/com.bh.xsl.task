<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 注册中心服务地址 -->
    <dubbo:protocol  name="dubbo" port="-1"/>

    <bean id="erpTaskInfoResource" class="resourceImpl.ErpTaskInfoResourceImpl"/>
    <dubbo:service interface="resource.ErpTaskInfoResource" ref="erpTaskInfoResource" timeout="600000"/>

    <bean id="taskInfoResource" class="resourceImpl.TaskInfoResourceImpl"/>
    <dubbo:service interface="resource.TaskInfoResource" ref="taskInfoResource" timeout="600000"/>
</beans>